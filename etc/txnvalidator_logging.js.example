{
  "version" : 1,
  "disable_existing_loggers" : true,

  "formatters": {
        "simple": {
            "format":"[%(asctime)s %(name)s %(levelname)s] %(message)s",
            "datefmt":"%H:%M:%S"
        }
    },

  "handlers" : {
    "debug" : {
      "class" : "logging.FileHandler",
      "level" : "DEBUG",
      "formatter" : "simple",
      "filename" : ""
    },

    "error" : {
      "class" : "logging.FileHandler",
      "level" : "ERROR",
      "formatter" : "simple",
      "filename" : ""
    }
    'gossip_core' : {
      "class" : "logging.FileHandler",
      "level" : "DEBUG",
      "formatter" : "simple",
      "filename" : ""
    }
},
  "loggers": {
    "gossip.gossip_core" : {
      "level" : "INFO",
      "handlers" : ["default"],
      "propagate" : "no"
    }
  },

  "root": {
    "level" : "INFO",
    "handlers" : ["error", debug]
  }
}
