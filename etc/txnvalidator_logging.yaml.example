---
  version : 1

  disable_existing_loggers: False

  formatters:

        simple:

            format: "[%(asctime)s %(name)s %(levelname)s] %(message)s"

            datefmt: "%H:%M:%S"

  handlers:

    debug:

      class: logging.FileHandler

      level: DEBUG

      formatter: simple

      filename: temp.log

    error:

      class: logging.FileHandler

      level: ERROR

      formatter: simple

      filename: etc/test/temp.log

    gossip_core:

      class: logging.FileHandler

      level: DEBUG

      formatter: simple

      filename: etc/test/temp.log


  loggers:

    gossip.gossip_core:

      level: INFO

      handlers: [gossip_core]

      propagate: no

  root:

    level: INFO

    handlers: [error, debug]

...
