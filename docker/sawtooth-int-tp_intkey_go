# Description:
#   Builds an image with Sawtooth TP Intkey Go installed.
#
# Build:
#   $ cd sawtooth-core
#   $ cp sdk/examples/intkey_go/src/sawtooth_intkey/sawtooth_intkey docker/
#   $ cd sawtooth-core/docker
#   $ docker build . -f sawtooth-int-tp_intkey_go -t sawtooth-tp_intkey_go
#
# Run:
#   $ docker run -t sawtooth-tp_intkey_go

FROM ubuntu:xenial

LABEL "install-type"="copied-bin"

RUN apt-get update \
 && apt-get install -y -q \
    libzmq3-dev \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

COPY tp_intkey_go /usr/bin/tp_intkey_go

EXPOSE 40000/tcp

CMD ["tp_intkey_go", "tcp://validator:40000"]
